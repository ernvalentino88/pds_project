<Controls:MetroWindow 
        x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client" Height="343.925" Width="525"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Foreground="#FF020202">
    

    <Controls:WindowCommands Foreground="{x:Null}" >
        <Controls:WindowCommands.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFD1C2C2" Offset="1"/>
            </LinearGradientBrush>
        </Controls:WindowCommands.Background>
        <TextBox x:Name="Text_ip" Controls:TextBoxHelper.Watermark="IP address" Width="242" Height="22" Controls:TextBoxHelper.ClearTextButton="True" />
        <TextBox x:Name="Text_port" Controls:TextBoxHelper.Watermark="Port" Controls:TextBoxHelper.ClearTextButton="True" Width="84" Height="22" />
    </Controls:WindowCommands>
    
</Controls:MetroWindow>


   
    
