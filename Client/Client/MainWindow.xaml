<Controls:MetroWindow 
        x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client" Height="339.925" Width="502"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Foreground="#FF020202">


    <Controls:WindowCommands Foreground="{x:Null}" Margin="0,0,2,8" >
        <Controls:WindowCommands.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFD1C2C2" Offset="1"/>
            </LinearGradientBrush>
        </Controls:WindowCommands.Background>
        <Grid Height="282" Width="507">
            <TextBox x:Name="Text_ip" Controls:TextBoxHelper.Watermark="IP address" Height="22" Controls:TextBoxHelper.ClearTextButton="True" Margin="35,150,217,106" />
            <TextBox x:Name="Text_port" Controls:TextBoxHelper.Watermark="Port" Controls:TextBoxHelper.ClearTextButton="True" Width="84" Height="22" Margin="356,150,67,106" />
            <Button HorizontalAlignment="Right" Margin="0,247,67,0" x:Name="Connect_button" Content="Connect" Style="{StaticResource AccentedSquareButtonStyle}" Height="35" Width="69" Click="Connect_button_Click"/>
            <Label x:Name="Message_label" Visibility="Hidden"/>
        </Grid>
    </Controls:WindowCommands>

</Controls:MetroWindow>


   
    
