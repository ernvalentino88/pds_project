<Controls:MetroWindow x:Class="ServerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="Server" Height="350" Width="525">

    <Controls:WindowCommands>
        <Grid Height="262" Width="497">
            <TextBox x:Name="text_port" Controls:TextBoxHelper.Watermark="Port" Controls:TextBoxHelper.ClearTextButton="True" Width="129" Margin="66,130,0,104" HorizontalAlignment="Left" />
            <Button x:Name="launch_button" Content="Launch" Style="{StaticResource AccentedSquareButtonStyle}" Click="launch_button_Click" Margin="368,217,26,10" RenderTransformOrigin="0.056,0.444" />
            <Label x:Name="con_stat" Visibility="Hidden"/>
            <Grid HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="104*"/>
                    <RowDefinition Height="27*"/>
                </Grid.RowDefinitions>
                <Label x:Name="text_label" Content="Insert port number for listening to ingress connection" FontSize="14" FontWeight="Bold" Margin="0,0,0,170" />
            </Grid>
        </Grid>
    </Controls:WindowCommands>

</Controls:MetroWindow>
    
    
